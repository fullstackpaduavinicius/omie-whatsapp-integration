{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Adicionado para melhor resolução de módulos
    "types": ["jest", "node"],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "src/test/**/*.ts"
  ]
}